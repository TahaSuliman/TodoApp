

@model IEnumerable<Application.DTOs.UserDto>
@{
    Layout = "~/Views/Shared/_Layout.cshtml";

    ViewData["Title"] = "إدارة المستخدمين";
}

<div class="container mt-4">
    <div class="d-flex justify-content-between align-items-center mb-4">
        <h2>
            <i class="bi bi-people-fill"></i> إدارة المستخدمين
        </h2>
        <a asp-action="Create" class="btn btn-primary">
            <i class="bi bi-plus-circle"></i> إضافة مستخدم جديد
        </a>
    </div>

    @if (TempData["Success"] != null)
    {
        <div class="alert alert-success alert-dismissible fade show" role="alert">
            <i class="bi bi-check-circle-fill"></i> @TempData["Success"]
            <button type="button" class="btn-close" data-bs-dismiss="alert" aria-label="Close"></button>
        </div>
    }

    @if (TempData["Error"] != null)
    {
        <div class="alert alert-danger alert-dismissible fade show" role="alert">
            <i class="bi bi-exclamation-triangle-fill"></i> @TempData["Error"]
            <button type="button" class="btn-close" data-bs-dismiss="alert" aria-label="Close"></button>
        </div>
    }

    @if (!Model.Any())
    {
        <div class="alert alert-info text-center">
            <i class="bi bi-info-circle"></i>
            <p class="mb-0">لا يوجد مستخدمين. قم بإضافة المستخدم الأول!</p>
        </div>
    }
    else
    {
        <div class="card">
            <div class="card-body">
                <div class="table-responsive">
                    <table class="table table-hover">
                        <thead class="table-light">
                            <tr>
                                <th>الرقم</th>
                                <th>الاسم</th>
                                <th>البريد الإلكتروني</th>
                                <th>تاريخ الميلاد</th>
                                <th>العمر</th>
                                <th class="text-center">الإجراءات</th>
                            </tr>
                        </thead>
                        <tbody>
                            @foreach (var user in Model)
                            {
                                <tr>
                                    <td>@user.Id</td>
                                    <td>
                                        <i class="bi bi-person-circle text-primary"></i>
                                        <strong>@user.Name</strong>
                                    </td>
                                    <td>
                                        <i class="bi bi-envelope"></i>
                                        @user.Email
                                    </td>
                                    <td>
                                        <i class="bi bi-calendar-event"></i>
                                        @user.BirthDate.ToString("dd/MM/yyyy")
                                    </td>
                                    <td>
                                        <span class="badge bg-info">@user.BirthDate سنة</span>
                                    </td>
                                    <td class="text-center">
                                        <div class="btn-group" role="group">
                                            <a asp-action="Details" asp-route-id="@user.Id"
                                               class="btn btn-sm btn-info" title="التفاصيل">
                                                <i class="bi bi-eye"></i>
                                            </a>
                                            <a asp-action="Edit" asp-route-id="@user.Id"
                                               class="btn btn-sm btn-warning" title="تعديل">
                                                <i class="bi bi-pencil-square"></i>
                                            </a>
                                            <a asp-action="Delete" asp-route-id="@user.Id"
                                               class="btn btn-sm btn-danger" title="حذف">
                                                <i class="bi bi-trash"></i>
                                            </a>
                                        </div>
                                    </td>
                                </tr>
                            }
                        </tbody>
                    </table>
                </div>
            </div>
        </div>

        <div class="mt-3">
            <p class="text-muted">
                <i class="bi bi-info-circle"></i>
                إجمالي المستخدمين: <strong>@Model.Count()</strong>
            </p>
        </div>
    }
</div>


