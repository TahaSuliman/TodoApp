

@model Application.DTOs.CreateUserDto
@{
    Layout = "~/Views/Shared/_Layout.cshtml";

    ViewData["Title"] = "إضافة مستخدم جديد";
}

<div class="container mt-4">
    <div class="row justify-content-center">
        <div class="col-md-8">
            <div class="card">
                <div class="card-header bg-primary text-white">
                    <h4 class="mb-0">
                        <i class="bi bi-person-plus-fill"></i> إضافة مستخدم جديد
                    </h4>
                </div>
                <div class="card-body">
                    @if (TempData["Error"] != null)
                    {
                        <div class="alert alert-danger alert-dismissible fade show" role="alert">
                            <i class="bi bi-exclamation-triangle-fill"></i> @TempData["Error"]
                            <button type="button" class="btn-close" data-bs-dismiss="alert"></button>
                        </div>
                    }

                    <form asp-action="Create" method="post">
                        <div class="mb-3">
                            <label asp-for="Name" class="form-label">
                                <i class="bi bi-person"></i> الاسم الكامل
                            </label>
                            <input asp-for="Name" class="form-control" placeholder="أدخل الاسم الكامل" />
                            <span asp-validation-for="Name" class="text-danger"></span>
                        </div>

                        <div class="mb-3">
                            <label asp-for="Email" class="form-label">
                                <i class="bi bi-envelope"></i> البريد الإلكتروني
                            </label>
                            <input asp-for="Email" class="form-control" type="email"
                                   placeholder="example@domain.com" />
                            <span asp-validation-for="Email" class="text-danger"></span>
                            <div class="form-text">
                                <i class="bi bi-info-circle"></i>
                                البريد الإلكتروني يجب أن يكون فريداً
                            </div>
                        </div>

                        <div class="mb-3">
                            <label asp-for="BirthDate" class="form-label">
                                <i class="bi bi-calendar-date"></i> تاريخ الميلاد
                            </label>
                            <input asp-for="BirthDate" class="form-control" type="date" />
                            <span asp-validation-for="BirthDate" class="text-danger"></span>
                        </div>

                        <div class="d-grid gap-2 d-md-flex justify-content-md-end mt-4">
                            <a asp-action="Index" class="btn btn-secondary">
                                <i class="bi bi-x-circle"></i> إلغاء
                            </a>
                            <button type="submit" class="btn btn-primary">
                                <i class="bi bi-save"></i> حفظ
                            </button>
                        </div>
                    </form>
                </div>
            </div>
        </div>
    </div>
</div>

@section Scripts {
    <partial name="_ValidationScriptsPartial" />
}


